<main>
<!-- <p id="notice"><%= notice %></p>
 -->
<% if user_signed_in? %>
  <h1>Pictures</h1>
  <table>
    <thead>
      <tr>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <%= link_to 'Make a new ricked pic!', new_picture_path %>
    <tbody>
      <% @pictures.each do |picture| %>
        <tr>
          <td><%= link_to cl_image_tag(picture.url, :crop => :fill, :width => 120, :height => 80), picture %></td>
          <td><%= link_to 'Show', picture %></td>
          <% if picture.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
            <td><%= link_to 'Delete', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
<%#= render partial: 'devise/sessions/new' %>

    <div class="container">
      <div class="row">
        <!-- <img class="logo" src ="https://cdn.pbrd.co/images/dLZfcnEZi.png"> -->
        <h1 class="logo2">Memeify!</h1>
        <% @pictures.each do |picture| %>
          <%= cl_image_tag(picture.url, :crop => :fill, :width => 120, :height => 80) %>
        <% end %>
        <h5 class="indigo-text">Welcome! Sign up, or login to start memeifying!</h5>
      </div>
      <div class="formwrap z-depth-1 grey lighten-4 row">
        <%= form_for("user", :url => user_session_path) do |f| %>
        <div class='row'>
          <br>
          <%#= f.label :email %>
          <div class='input-field col s12'>
            <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-field" %>
          </div>
        </div>
        <div class='row'>
          <br>
          <%#= f.label :password %>
          <div class='input-field col s12'>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-field" %>
          </div>
        </div>

        <div class='row'>
          <br>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>

        <div class='row'>
          <div class="actions">
            <%= f.button 'Login', class: "login action-button shadow animate blue" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "action-button shadow animate red" %>
          </div>
        </div>
        <% end %> <!-- End of form erb -->
      </div>  <!-- End of  " formwrap " row -->
    </div> <!-- End of container -->
  <% end %>
</main> <!-- End of main -->
